<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bagronall"
    tools:context="com.mail.pengaduanmail.Login">

    <TextView
        android:layout_marginTop="180dp"
        android:layout_centerHorizontal="true"
        android:textSize="9pt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"/>

    <LinearLayout
        android:id="@+id/linIn"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <LinearLayout
        android:id="@+id/linUser"
        android:layout_margin="20dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_height="20dp"
            android:layout_width="20dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/username"/>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <EditText
            android:id="@+id/txtUsername"
            android:layout_width="200dp"
            android:textSize="7pt"
            android:textColorHint="#fff"
            android:layout_height="wrap_content"
            android:hint="Username"/>
        </android.support.design.widget.TextInputLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_below="@+id/linUser"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_height="20dp"
            android:layout_width="20dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/password"/>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <EditText
            android:id="@+id/txtPassword"
            android:layout_width="200dp"
            android:textSize="7pt"
            android:inputType="textPassword"
            android:textColorHint="#fff"
            android:layout_height="wrap_content"
            android:hint="Password"/>
        </android.support.design.widget.TextInputLayout>

    </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/linIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <Button
        android:layout_margin="7dp"
        android:id="@+id/btnLogin"
        android:background="#24a1c7"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:textSize="5pt"
        android:textColor="#fff"
        android:text="login"/>

    <Button
        android:layout_margin="7dp"
        android:background="#24a1c7"
        android:id="@+id/btnDaftar"
        android:layout_below="@+id/btnLogin"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:textSize="5pt"
        android:textColor="#fff"
        android:text="Sighn up"/>
    </LinearLayout>

</RelativeLayout>
